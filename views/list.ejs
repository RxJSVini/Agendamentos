<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <form action="/searchresult" method="get">
            <input  class="form-control" type="search" name="search" id="searchId">
            <button type="submit" class="btn btn-primary btn-sm">Pesquisar</button>
        </form>
        <br>
        <div class="card">
            <div class="card-header">
                <h1>Agendamentos</h1>
            </div>
            
            <div class="card-body">
                <ul class="list-group">
                    <% if(index.length == 0){%>
                        <h2>Nenhum dado localizado para listagem!</h2>
                   <% } else { %>
                        <% index.forEach(appointments =>{ %>
                            <div class="card-body">
                                <li class="list-group-item">Consulta:<%= appointments.description%></li>
                                <li class="list-group-item">Paciente:<%= appointments.name %></li>
                                <li class="list-group-item">EMAIL:<%= appointments.email %></li>
                                <li class="list-group-item">CPF:<%= appointments.cpf %></li>
                            </div>
                
                        <% })%>
                   <% } %>
                </ul>
                <hr>
            </div>
        </div>

        
    </div>

</body>
</html>